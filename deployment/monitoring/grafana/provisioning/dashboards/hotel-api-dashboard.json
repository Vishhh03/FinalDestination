  {
  "dashboard": {
    "title": "Hotel Booking API Metrics",
    "tags": ["hotel", "api"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Hotels",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "datasource": "Prometheus",
        "targets": [
          { "expr": "hotel_api_total_hotels", "refId": "A" }
        ]
      },
      {
        "id": 2,
        "title": "Total Bookings",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "datasource": "Prometheus",
        "targets": [
          { "expr": "hotel_api_total_bookings", "refId": "A" }
        ]
      },
      {
        "id": 3,
        "title": "Active Bookings",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "datasource": "Prometheus",
        "targets": [
          { "expr": "hotel_api_active_bookings", "refId": "A" }
        ]
      },
      {
        "id": 4,
        "title": "Total Users",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "datasource": "Prometheus",
        "targets": [
          { "expr": "hotel_api_total_users", "refId": "A" }
        ]
      },

      {
        "id": 5,
        "title": "HTTP Request Rate (req/s)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "datasource": "Prometheus",
        "targets": [
          { "expr": "sum(rate(http_requests_total[1m]))", "refId": "A", "legendFormat": "all" }
        ]
      },
      {
        "id": 6,
        "title": "HTTP 5xx Error Rate (req/s)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[1m]))",
            "refId": "A",
            "legendFormat": "5xx"
          }
        ]
      },
      {
        "id": 7,
        "title": "Request p95 Latency (s)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "refId": "A",
            "legendFormat": "p95"
          }
        ]
      },
      {
        "id": 8,
        "title": "Total HTTP Requests",
        "type": "stat",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 14},
        "datasource": "Prometheus",
        "targets": [
          { "expr": "sum(http_requests_total)", "refId": "A" }
        ]
      }
    ],
    "schemaVersion": 36,
    "version": 2
  }
}
